@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-success btn-sm">Add New</a>
            <table class="table table-responsive table-bordered text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Status</th>
                        <th>Photo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Gender</td>
                            <td>@item.Age</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <input type="checkbox" checked="checked" value="@item.IsActive" disabled />
                                }
                                else
                                {
                                    <input type="checkbox" value="@item.IsActive" disabled />
                                }
                            </td>
                            <td>
                                <img src="~/images/@Url.Content(item.Photo)" style="width:100px; height:100px"/>
                            </td>
                            <td>
                                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>